{
  "private": true,
  "name": "bandit-architecture",
  "version": "1.0.0",
  "description": "NYU Heuristic Problem Solving Bandit Game Architecture",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "loadtest": "colyseus-loadtest test/random-load_test.ts --room bandit --numClients 100",
    "build": "node node_modules/rimraf/bin dist && tsc && node node_modules/copyfiles/copyfiles package.json ./dist && node node_modules/copyfiles/copyfiles arena.env ./dist",
    "clean": "node node_modules/rimraf/bin *.log *.bkp",
    "test": "mocha --require ts-node/register test/**-unit_test.ts --exit --timeout 15000"
  },
  "author": "Jkker",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/colyseus/create-colyseus/issues"
  },
  "homepage": "https://github.com/colyseus/create-colyseus#readme",
  "devDependencies": {
    "@colyseus/loadtest": "^0.14.4",
    "@colyseus/testing": "^0.14.21",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.1",
    "@types/mocha": "^8.2.3",
    "copyfiles": "^2.4.1",
    "mocha": "^9.0.2",
    "rimraf": "^2.7.1",
    "ts-node": "^8.1.0",
    "ts-node-dev": "^1.0.0-pre.63",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@colyseus/arena": "^0.14.22",
    "@colyseus/monitor": "^0.14.20",
    "@colyseus/schema": "^1.0.40",
    "colyseus": "^0.14.20",
    "colyseus.js": "^0.14.13",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.16.4",
    "weighted": "^1.0.0"
  }
}