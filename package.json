{
  "private": true,
  "name": "bandit-architecture",
  "version": "2022.10.12.0",
  "description": "NYU Heuristic Problem Solving Bandit Game Architecture",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/server/index.js",
    "deploy": "npm run build && pm2 startOrRestart ecosystem.config.js",
    "dev": "ts-node-dev --respawn --transpile-only server/index.ts",
    "loadtest": "colyseus-loadtest test/random-load_test.ts --room pvp --numClients 1000 --endpoint wss://bandit.erry.dev",
    "build": "node node_modules/rimraf/bin dist && tsc && node node_modules/copyfiles/copyfiles package.json ./dist && node node_modules/copyfiles/copyfiles *.env ./dist",
    "clean": "node node_modules/rimraf/bin *.log *.bkp",
    "test": "mocha --require ts-node/register test/**-unit_test.ts --exit --timeout 15000",
    "proxy": "node clients/proxy.js"
  },
  "author": "Jkker",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jkker/bandit-game-architecture/issues"
  },
  "homepage": "https://github.com/Jkker/bandit-game-architecture",
  "devDependencies": {
    "@colyseus/loadtest": "^0.14.7",
    "@colyseus/testing": "^0.14.22",
    "@types/argparse": "^2.0.10",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/mocha": "^10.0.0",
    "copyfiles": "^2.4.1",
    "mocha": "^10.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "@colyseus/arena": "^0.14.24",
    "@colyseus/monitor": "^0.14.22",
    "@colyseus/schema": "^1.0.40",
    "argparse": "^2.0.1",
    "colyseus": "^0.14.24",
    "colyseus.js": "^0.14.13",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-basic-auth": "^1.2.1",
    "weighted": "^1.0.0"
  }
}
